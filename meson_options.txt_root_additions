
option('R_HOME', type : 'string', value : '', description : 'The directory where the "R" shared library file lives. This location is typically in Linux\UNIX\cygwin cases in "lib" directory. Therefore, usually, that path without the file name, is correct. An exception is in the case of "R for Windows" versions 2.12 and higher from https://cran.r-project.org/bin/windows/base/.  In these cases the location is where the R.exe exists and that directory is before the /x64 xor /i386 subdirectories.')
option('R_ARCH', type : 'string', value : '', description : 'Used in compiling (msvc, mingw) with "R for Windows" versions 2.12 and higher. These are called "R Sub-Architectures". Expected values: /x64 xor /i386')
option('rversion', type : 'string', value : '', description : 'The "version" of "R [for Windows]"')
